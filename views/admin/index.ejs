<%- include('head.ejs') %>

<div class="adminWrapper">
    <div class="adminSidebar adminCol">
        <div class="sidebarLogo">
            <a href="/admin">
                <img src="images/logo e white_1.svg" />
            </a>
        </div>
        <div class="sidebarContent">
            <a href="/orders" class="sidebarMenuItem">
                <i class="fas fa-shopping-cart"></i>
                <span class="sidebarMenuItemTitle">
                    ORDERS
                </span>
            </a>
            <a href="/users" class="sidebarMenuItem">
                <i class="fas fa-user-friends"></i>
                <span class="sidebarMenuItemTitle">
                    USERS
                </span>
            </a>
            <a href="/products" class="sidebarMenuItem">
                <i class="fas fa-boxes-alt"></i>
                <span class="sidebarMenuItemTitle">
                    PRODUCTS
                </span>
            </a>
            <a href="/pages" class="sidebarMenuItem">
                <i class="fas fa-file"></i>
                <span class="sidebarMenuItemTitle">
                    PAGES
                </span>
            </a>
        </div>
    </div>
    <div class="adminCol adminContent">
        <header>
            <div class="admin_search">
                <input class="search_input" placeholder="Search ..." type="text">
                <span class="admin_search_icon"><i class="fas fa-search fa-sm"></i></span>
            </div>
            <span class="admin_notification_icon"><i class="fas fa-bell fa-fw"></i></span>
            <span class="admin_message_icon"><i class="fas fa-envelope-open"></i></span>
            <span class="admin_logo_icon"><i class="fas fa-user-md"></i></span>
        </header>
        <div class="mainContent">

            <p class="welcome_text">WELCOME Faiq Alizade</p>
            <div class="page_bar">
                <a>HOME</a>
                <a>ABOUT</a>
                <a>SALE</a>
                <a>+</a>
            </div>
            <div class="dashboardWrapper">
                <div class="dashboardRow">
                    <div class="dashboardRowCol">
                        <%
                        var x = 0
                        while(x < 2){
                        %>
                        <div class="dashboardRequests dashboardWidget">
                            <div class="dashboardWidgetWrapper">
                                <div class="dashboardWidgetHeader">
                                    <div class="dashBoardWidgetHeaderTitle">
                                        Requests
                                    </div>
                                </div>
                                <div class="dashboardWidgetContent">
                                    <div class="dashboardTable">
                                        <div class="dashboardTableHeader">
                                            <div class="dashboardTableHeaderItem">
                                                User
                                            </div>
                                            <div class="dashboardTableHeaderItem">
                                                Date
                                            </div>
                                            <div class="dashboardTableHeaderItem">
                                                Status
                                            </div>
                                        </div>
                                        <div class="dashboardTableContent">
                                            
                                            <%
                                            var i = 0
                                            while(i < 5){ 
                                                i++
                                            %>
                                                <div class="dashboardTableContentItemWrapper">
                                                    <div class="dashboardTableContentItem">
                                                        Faiq Alizade
                                                    </div>
                                                    <div class="dashboardTableContentItem">
                                                        25.12.2019
                                                    </div>
                                                    <div class="dashboardTableContentItem">
                                                        DO
                                                    </div>                                            
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="dashboardWidgetFooter">
                                Footer
                            </div>
                        </div>
                        <% x++ } %>
                    </div>

                    <div class="dashboardRowCol">
                        <div class="dashboardWidget">
                            <div class="dashboardWidgetWrapper">
                                <div class="dashboardWidgetHeader">
                                    <div class="dashBoardWidgetHeaderTitle">
                                        Orders
                                    </div>
                                </div>
                                <div class="dashboardWidgetContent">
                                    <div class="dashboardTable">
                                        <div class="dashboardTableHeader">
                                            <div class="dashboardTableHeaderItem dashboardTableHeaderItem__orderNumber">
                                                #
                                            </div>
                                            <div class="dashboardTableHeaderItem">
                                                User
                                            </div>
                                            <div class="dashboardTableHeaderItem">
                                                Date
                                            </div>
                                            <div class="dashboardTableHeaderItem">
                                                Price
                                                <span class="priceCurrencySymbol">
                                                    <img src="images/azn.png">
                                                </span>
                                            </div>
                                            <div class="dashboardTableHeaderItem ">
                                                Payment method
                                            </div>
                                            <div class="dashboardTableHeaderItem">
                                                Actions
                                            </div>
                                        </div>
                                        <div class="dashboardTableContent">
                                            
                                            <%
                                            var i = 0
                                            while(i < 5){ 
                                                i++
                                            %>
                                                <div class="dashboardTableContentItemWrapper">
                                                    <div class="dashboardTableContentItem dashboardTableContentItem__orderNumber">
                                                        <%= i %>
                                                    </div>
                                                    <div class="dashboardTableContentItem">
                                                        Faiq Alizade
                                                    </div>
                                                    <div class="dashboardTableContentItem">
                                                        25.12.2019
                                                    </div>
                                                    <div class="dashboardTableContentItem">
                                                        120
                                                    </div>
                                                    <div class="dashboardTableContentItem   dashboardTableContentItem__payMethodCash">
                                                        <i class="fas fa-money-bill-wave"></i>
                                                        <!-- <i class="fas fa-credit-card"></i> -->
                                                    </div>
                                                    <div class="dashboardTableContentItem">
                                                        <span class="orderAction orderAction__detail">
                                                            <i class="fas fa-info"></i>
                                                        </span>
                                                        <span class="orderAction orderAction__check">
                                                            <i class="far fa-check"></i>
                                                        </span>
                                                        <span class="orderAction orderAction__remove">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </span>
                                                    </div>                                            
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="dashboardWidgetFooter">
                                Footer
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('.page_bar').hide(0);
    var i = 0;

    function page_click(name) {
        if (i == 0) {
            $('.' + name + '_bar').fadeIn(500);
            i = 1;
        } else {
            $('.page_bar').fadeOut(300);
            i = 0;
        }

    }

    function content_click(name) {
        if (i == 1) {
            $('.' + name + '_bar').fadeOut(300);
            i = 0;
        }

    }
</script>