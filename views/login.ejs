<%- include('layouts/head.ejs')%>
<% var errorMsg %>
<div class="login">
    <div class="log_content">
        <h3 class="login_headtext">SIGN IN</h3>
        <form method="post" class="login_form" >
            <%if (errorMsg) { %>
                <p class="registerError errorText">
                    <%= errorMsg %>
                </p>
            <% } %>
            <label for='login_username' class="login_username_text">
                Email
            </label>
            <input id='login_username' required class="login_username" name="email" type="email" placeholder="Email">

            <label for='login_password' class="login_password_text">
                PASSWORD
            </label>
            <input id='login_password' required class="login_password" name="password" type="password" placeholder="Password">
            <p><a class="login_forgpass" href="/forgot">FORGOT PASSWORD?</a></p>
            <input id='loginSbmt' type="submit">
            <div class="loginButtonsWrapper">
                <a href="/register" class="btnSecondary">REGISTER</a>
                <label for="loginSbmt" class="btnPrimary">LOGIN <i class="fal fa-arrow-right"></i></label>
            </div>
        </form>
    </div>
</div>
<%- include('layouts/footer.ejs')%>